{{!
    @template mod_coursesearch/search_result

    Single search result item template.

    Context variables required for this template:
    * name - The result name/title
    * url - The result URL
    * modname - The module name
    * iconurl - The icon URL
    * iconalt - Alt text for the icon
    * snippet - The content snippet with highlighting (optional)
    * hassnippet - Whether there is a snippet
    * matchtype - What was matched (optional)
    * hasmatchtype - Whether there is match type info
    * forumname - The forum name (optional)
    * hasforumname - Whether this is a forum result with forum name
    * issection - Whether this is a section result
    * isforum - Whether this is a forum result

    Example context (json):
    {
        "name": "Introduction to Course",
        "url": "/mod/page/view.php?id=456",
        "modname": "page",
        "iconurl": "/theme/image.php/boost/page/icon",
        "iconalt": "page",
        "snippet": "This is the <span class=\"highlight\">introduction</span> to the course.",
        "hassnippet": true,
        "matchtype": "content",
        "hasmatchtype": true,
        "forumname": null,
        "hasforumname": false,
        "issection": false,
        "isforum": false
    }
}}
<div class="coursesearch-result">
    <div class="coursesearch-result-title">
        <img src="{{iconurl}}" alt="{{iconalt}}" class="icon">
        <a href="{{url}}">{{name}}</a>
    </div>

    {{#hasforumname}}
    <div class="coursesearch-result-forum">
        {{#str}} inforum, mod_coursesearch, {{forumname}} {{/str}}
    </div>
    {{/hasforumname}}

    {{#hassnippet}}
    <div class="coursesearch-result-snippet">
        {{{snippet}}}
    </div>
    {{/hassnippet}}

    {{#hasmatchtype}}
    <div class="coursesearch-result-match">
        {{#str}} matchedin, mod_coursesearch, {{matchtype}} {{/str}}
    </div>
    {{/hasmatchtype}}
</div>

