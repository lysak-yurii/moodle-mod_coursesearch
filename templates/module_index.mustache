{{!
    @template mod_coursesearch/module_index

    Module index page template showing all coursesearch instances in a course.

    Context variables required for this template:
    * hasinstances - Whether there are any instances
    * instances - Array of coursesearch instances with: name, url, description

    Example context (json):
    {
        "hasinstances": true,
        "instances": [
            {
                "name": "Course Search",
                "url": "/mod/coursesearch/view.php?id=123",
                "description": "Search through all course content"
            }
        ]
    }
}}
{{#hasinstances}}
<table class="generaltable mod_index">
    <thead>
        <tr>
            <th>{{#str}} name {{/str}}</th>
            <th>{{#str}} description {{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#instances}}
        <tr>
            <td>
                <a href="{{url}}">{{name}}</a>
            </td>
            <td>
                {{{description}}}
            </td>
        </tr>
        {{/instances}}
    </tbody>
</table>
{{/hasinstances}}

